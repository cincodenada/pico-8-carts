pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
x=0
y=0
midpat=0xaaaa
pxsize=2
gridsize=pxsize+2

function _update()
  if(btnp(0)) then x-=1 end
  if(btnp(1)) then x+=1 end
  if(btnp(2)) then y-=1 end
  if(btnp(3)) then y+=1 end
  
  if(x<0) then x=0 end
  if(y<0) then y=0 end
  
  if(x>127) then x=127 end
  if(y>63) then y=63 end
end

function _draw()
  cls()
  rect(
    x*gridsize,
    y*gridsize,
    (x+1)*gridsize-1,
    (y+1)*gridsize-1,
    7
  )
end
